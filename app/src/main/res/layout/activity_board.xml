<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.joao.ttt.Board">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart"
        android:id="@+id/restart"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button1"
        android:layout_marginTop="40dp"
        android:background="@color/background_floating_material_dark"
        android:layout_below="@+id/restart"
        android:layout_toLeftOf="@+id/restart"
        android:layout_toStartOf="@+id/restart" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button2"
        android:background="@color/background_floating_material_dark"
        android:layout_alignBottom="@+id/button1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button3"
        android:background="@color/background_floating_material_dark"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/restart"
        android:layout_toEndOf="@+id/restart" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button4"
        android:background="@color/background_floating_material_dark"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button5"
        android:background="@color/background_floating_material_dark"
        android:layout_alignTop="@+id/button4"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button6"
        android:background="@color/background_floating_material_dark"
        android:layout_alignTop="@+id/button5"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button7"
        android:background="@color/background_floating_material_dark"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_marginTop="37dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button8"
        android:background="@color/background_floating_material_dark"
        android:layout_alignTop="@+id/button7"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/button9"
        android:background="@color/background_floating_material_dark"
        android:layout_alignTop="@+id/button8"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Player 1: 0"
        android:id="@+id/score1"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button8"
        android:layout_toStartOf="@+id/button8"
        android:layout_marginBottom="33dp"
        android:textColor="@color/abc_primary_text_disable_only_material_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Player 2: 0"
        android:id="@+id/score2"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:layout_alignTop="@+id/score1"
        android:layout_toRightOf="@+id/button8"
        android:layout_toEndOf="@+id/button8" />

</RelativeLayout>
