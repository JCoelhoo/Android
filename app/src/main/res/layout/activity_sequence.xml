<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.joao.ttt.Sequence">

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/b1"
        android:layout_marginTop="86dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/b2"
        android:layout_toStartOf="@+id/b2"
        android:background="@android:color/holo_orange_light" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/b2"
        android:layout_alignTop="@+id/b1"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_red_light" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/b3"
        android:layout_alignBottom="@+id/b2"
        android:layout_toRightOf="@+id/b2"
        android:layout_toEndOf="@+id/b2"
        android:background="@android:color/holo_red_dark" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/b4"
        android:layout_below="@+id/b1"
        android:layout_alignLeft="@+id/b1"
        android:layout_alignStart="@+id/b1"
        android:background="@android:color/holo_blue_light" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/b5"
        android:layout_alignTop="@+id/b4"
        android:layout_toLeftOf="@+id/b3"
        android:layout_toStartOf="@+id/b3"
        android:background="@android:color/holo_green_light" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/b6"
        android:layout_alignTop="@+id/b5"
        android:layout_alignLeft="@+id/b3"
        android:layout_alignStart="@+id/b3"
        android:background="@android:color/holo_purple" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/b7"
        android:layout_below="@+id/b4"
        android:layout_alignLeft="@+id/b4"
        android:layout_alignStart="@+id/b4"
        android:background="@android:color/holo_green_dark" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/b8"
        android:layout_below="@+id/b5"
        android:layout_toLeftOf="@+id/b6"
        android:layout_toStartOf="@+id/b6"
        android:background="@android:color/holo_blue_bright" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/b9"
        android:layout_below="@+id/b6"
        android:layout_alignLeft="@+id/b6"
        android:layout_alignStart="@+id/b6"
        android:background="@color/colorPrimary" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart"
        android:id="@+id/restart"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Score: 1"
        android:id="@+id/maximum"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/b9"
        android:layout_alignEnd="@+id/b9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Score: 1"
        android:id="@+id/current"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/b8"
        android:layout_toStartOf="@+id/b8" />
</RelativeLayout>
